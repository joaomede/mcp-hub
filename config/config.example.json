{
  "mcpServers": {
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"]
    },
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone", "America/Sao_Paulo"]
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git", "--repository", "/repo"]
    }
  }
}